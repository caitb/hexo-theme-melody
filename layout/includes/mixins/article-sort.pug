mixin articleSort(posts)
  .article-sort
    - var year
    - posts.each(function (article) {
      - var tempYear = date(article.date, 'YYYY')
      if tempYear !== year
        - year = tempYear 
        .article-sort-item.year= year
      .article-sort-item
        time.article-sort-item__time= date(article.date)
        a.qin.article-sort-item__title(href=url_for(article.path) target="_blank")= article.title || 'No Title'
    - })
  script(src=url_for('/js/qin.js'))